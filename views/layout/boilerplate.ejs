    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }

        /* Custom Navbar Link Styling */
        .navbar-nav .nav-link {
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            transition: background-color 0.2s ease-in-out;
        }

        .navbar-nav .nav-link:hover, .navbar-nav .nav-link:focus {
            background-color: #f1f3f5; /* A subtle light gray for hover */
        }

        /* Hover effect for dark navbar */
        .navbar-dark .navbar-nav .nav-link:hover, .navbar-dark .navbar-nav .nav-link:focus {
            background-color: #3a5245; /* A subtle dark green for hover on dark navbar */
        }

        /* Smooth transition for buttons */
        .btn {
            transition: color .2s ease-in-out, background-color .2s ease-in-out, border-color .2s ease-in-out;
        }
    </style>
</head>

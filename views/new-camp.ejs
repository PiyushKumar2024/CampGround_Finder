<% layout('layout/boilerplate.ejs') %>
<div class="row">
    <div class="col col-lg-6 mx-auto">
<div class="container pt-5">
    <form action="/campgrounds" method="POST" class="needs-validation mt-5 border p-5 border-5 rounded-3" novalidate style="border: 5px solid blue; border-radius: 1rem; padding: 3rem;"
>

        <div class="form-group">
            <label for="name">Name of campground</label>
            <input type="text" id="name" name="name" required class="form-control">
            <div class="invalid-feedback">Name is required.</div>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" required class="form-control">
            <div class="invalid-feedback">Price is required.</div>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" required class="form-control">
            <div class="invalid-feedback">Location is required.</div>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" required
                class="form-control">
            <div class="invalid-feedback">Description is required.</div>
        </div>
        <button type="submit">Add</button>
    </form>
    </div>
    </div>
    </div>

    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated'); // <-- this line adds the validation style
                    }, false);
                });
        })();
    </script>
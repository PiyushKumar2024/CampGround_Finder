<% layout('layout/boilerplate.ejs') %>

<style>
    body {
        background-color: #f8f9fa; /* A very light gray, subtle background */
    }
</style>
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <form action="/register" method="POST" class="needs-validation bg-white p-4 p-md-5 rounded-3 shadow-sm" novalidate>
                <h1 class="text-center mb-4 text-muted">Register</h1>
                <div class="form-group mb-3">
                    <label for="username">Enter username:</label>
                    <input type="text" id="username" name="username" required class="form-control">
                    <div class="invalid-feedback">Username is required.</div>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Enter mail:</label>
                    <input type="email" id="email" name="email" required class="form-control">
                    <div class="invalid-feedback">A valid email is required.</div>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Enter password:</label>
                    <input type="password" id="password" name="password" required class="form-control">
                    <div class="invalid-feedback">Password is required.</div>
                </div>
                <button class="btn btn-success" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>

<script src="/formValidation.js"></script>
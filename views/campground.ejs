<% layout('layout/boilerplate.ejs') %>
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <img src="<%= camp.image %>" class="card-img-top" alt="campground image" style="aspect-ratio: 16/9; object-fit: cover;">
                <div class="card-body">
                    <h2 class="card-title"><%= camp.name %></h2>
                    <p class="card-text"><%= camp.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted"><%= camp.location %></li>
                    <li class="list-group-item">$<%= camp.price %> per night</li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/edit/<%=camp._id%>" class="btn btn-info">Edit</a>
                    <form class="d-inline" action="/campgrounds?id=<%=camp._id%>&_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">Leave a Review</h4>
                    <form action="/campgrounds/<%= camp.id %>/reviews" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="review[rating]">Rating</label>
                            <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="review[rating]" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="review[body]">Review</label>
                            <textarea class="form-control" name="review[body]" id="review[body]" rows="3" required></textarea>
                            <div class="invalid-feedback">Review text is required.</div>
                        </div>
                        <button class="btn btn-success">Submit Review</button>
                    </form>
                </div>
            </div>

            <% for(let review of camp.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text"><%= review.body %></p>
                    <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/formValidation.js"></script>
